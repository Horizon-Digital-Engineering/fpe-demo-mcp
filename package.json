{
  "name": "fpe-demo-mcp",
  "version": "1.0.1",
  "description": "Demo MCP server showing FF3 Format Preserving Encryption + authentication patterns",
  "type": "module",
  "main": "dist/src/stdio-server.js",
  "bin": {
    "fpe-demo-mcp": "dist/src/stdio-server.js"
  },
  "scripts": {
    "build": "tsc",
    "build:examples": "tsc -p examples/tsconfig.json",
    "clean": "rm -rf dist",
    "clean-all": "rm -rf dist node_modules package-lock.json",
    "start": "npm run build && node dist/src/stdio-server.js",
    "start:http": "npm run build && node dist/src/http-server.js",
    "dev": "tsc --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:old": "npm run build && node dist/tests/AuthService.test.js && node dist/tests/stdio-server.test.js && node dist/tests/http-server.test.js",
    "start:debug": "AUTH_MODE=debug npm start",
    "start:test": "AUTH_MODE=test npm start",
    "start:prod": "AUTH_MODE=production npm start",
    "serve:http": "AUTH_MODE=authless PORT=8765 npm run start:http",
    "serve:http:debug": "AUTH_MODE=debug PORT=8765 npm run start:http",
    "serve:http:test": "AUTH_MODE=test PORT=8765 npm run start:http",
    "serve:http:prod": "AUTH_MODE=production PORT=8765 npm run start:http",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix"
  },
  "keywords": [
    "mcp",
    "format-preserving-encryption",
    "fpe",
    "ff3",
    "data-protection",
    "claude",
    "llm",
    "json-rpc",
    "encryption",
    "demo",
    "chatgpt",
    "openai",
    "authentication",
    "jwt"
  ],
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.18.1",
    "express": "^5.1.0",
    "ff3": "^1.0.1",
    "jsonwebtoken": "^9.0.2",
    "zod": "^3.23.0"
  },
  "devDependencies": {
    "@types/express": "^5.0.3",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^24.5.2",
    "@typescript-eslint/eslint-plugin": "^8.44.0",
    "@typescript-eslint/parser": "^8.44.1",
    "@vitest/coverage-v8": "^3.2.4",
    "c8": "^10.1.3",
    "eslint": "^9.36.0",
    "typescript": "^5.0.0",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Horizon-Digital-Engineering/fpe-demo-mcp.git"
  },
  "bugs": {
    "url": "https://github.com/Horizon-Digital-Engineering/fpe-demo-mcp/issues"
  },
  "homepage": "https://github.com/Horizon-Digital-Engineering/fpe-demo-mcp#readme",
  "license": "BUSL-1.1",
  "author": "Leslie Gutschow <leslie.gutschow@horizondigital.dev>"
}
